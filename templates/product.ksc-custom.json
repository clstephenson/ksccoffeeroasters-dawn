{
    "sections": {
        "main": {
            "type": "main-product",
            "blocks": {
                "vendor": {
                    "type": "text",
                    "disabled": true,
                    "settings": {
                        "text": "{{ product.vendor }}",
                        "text_style": "uppercase"
                    }
                },
                "title": {
                    "type": "title",
                    "settings": {}
                },
                "subtitle": {
                    "type": "text",
                    "settings": {
                        "text": "{{ product.metafields.descriptors.subtitle.value }}",
                        "text_style": "subtitle"
                    }
                },
                "review_star_rating": {
                    "type": "shopify:\/\/apps\/product-reviews\/blocks\/star_rating\/bae150af-8da8-48b2-9867-398188115e5f",
                    "settings": {
                        "stars_fill_color": "#505050",
                        "star_size": 15,
                        "text_align": "flex-start",
                        "product": "{{product}}",
                        "stars_text_empty": "No reviews yet"
                    }
                },
                "price": {
                    "type": "price",
                    "settings": {}
                },
                "variant_picker": {
                    "type": "variant_picker",
                    "settings": {
                        "picker_type": "button"
                    }
                },
                "quantity_selector": {
                    "type": "quantity_selector",
                    "settings": {}
                },
                "buy_buttons": {
                    "type": "buy_buttons",
                    "settings": {
                        "show_dynamic_checkout": true
                    }
                },
                "description": {
                    "type": "description",
                    "settings": {}
                },
                "product_metafields": {
                    "type": "custom_liquid",
                    "settings": {
                        "custom_liquid": "{% if product.metafields.coffee.country %}\n    <div>Country: {{ product.metafields.coffee.country.value }}<\/div>\n{% endif %}\n{% if product.metafields.coffee.region %}\n    <div>Region: {{ product.metafields.coffee.region.value }}<\/div>\n{% endif %}\n{% if product.metafields.coffee.farm %}\n    <div>Farm: {{ product.metafields.coffee.farm.value }}<\/div>\n{% endif %}\n{% if product.metafields.coffee.variety %}\n    <div>Variety: {{ product.metafields.coffee.variety.value }}<\/div>\n{% endif %}\n{% if product.metafields.coffee.process %}\n    <div>Process: {{ product.metafields.coffee.process.value }}<\/div>\n{% endif %}\n{% if product.metafields.coffee.altitude %}\n    <div>Altitude: {{ product.metafields.coffee.altitude.value }}<\/div>\n{% endif %}"
                    }
                },
                "share": {
                    "type": "share",
                    "settings": {
                        "share_label": "Share"
                    }
                },
                "shipping_info": {
                    "type": "collapsible_tab",
                    "settings": {
                        "heading": "Shipping Info",
                        "icon": "truck",
                        "content": "",
                        "page": "shipping-info"
                    }
                },
                "faqs": {
                    "type": "collapsible_tab",
                    "settings": {
                        "heading": "FAQs",
                        "icon": "question_mark",
                        "content": "<p>Visit our <a href=\"\/pages\/faqs\" title=\"Frequently Asked Questions (FAQs)\">FAQs page<\/a> to find answers to common questions.<\/p>",
                        "page": ""
                    }
                },
                "additional_info": {
                    "type": "collapsible_tab",
                    "settings": {
                        "heading": "Additional Info",
                        "icon": "check_mark",
                        "content": "",
                        "page": "cottage-food-info"
                    }
                }
            },
            "block_order": [
                "vendor",
                "title",
                "subtitle",
                "review_star_rating",
                "price",
                "variant_picker",
                "quantity_selector",
                "buy_buttons",
                "description",
                "product_metafields",
                "share",
                "shipping_info",
                "faqs",
                "additional_info"
            ],
            "settings": {
                "enable_sticky_info": true,
                "media_position": "left",
                "gallery_layout": "thumbnail",
                "media_size": "small",
                "mobile_thumbnails": "show",
                "hide_variants": true,
                "enable_video_looping": false,
                "padding_top": 36,
                "padding_bottom": 12
            }
        },
        "product-recommendations": {
            "type": "product-recommendations",
            "settings": {
                "heading": "You may also like",
                "heading_size": "h1",
                "products_to_show": 4,
                "columns_desktop": 4,
                "color_scheme": "background-1",
                "image_ratio": "square",
                "show_secondary_image": true,
                "show_vendor": false,
                "show_rating": false,
                "columns_mobile": "2",
                "padding_top": 36,
                "padding_bottom": 36
            }
        },
        "product_reviews": {
            "type": "apps",
            "blocks": {
                "b74ae007-b062-44d0-8dd7-145cf1d8a82b": {
                    "type": "shopify:\/\/apps\/product-reviews\/blocks\/reviews\/bae150af-8da8-48b2-9867-398188115e5f",
                    "settings": {}
                }
            },
            "block_order": [
                "b74ae007-b062-44d0-8dd7-145cf1d8a82b"
            ],
            "settings": {
                "include_margins": true
            }
        }
    },
    "order": [
        "main",
        "product-recommendations",
        "product_reviews"
    ]
}